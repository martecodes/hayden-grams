<!doctype html>
<html>

<head>
    <title>New Post</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
</head>

<body>

    <nav class="navbar fixed-top navbar-default bg-dark mb-5" role="navigation">
        <div class="display-1 text-center">
            <h1 class="text-white">Feed</h1>
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a href="/feed" class="btn btn-primary m-1">Feed</a>
                </li>
                <li class="nav-item">
                    <a href="/profile" class="btn btn-secondary m-1">Profile</a>
                </li>
                <li class="nav-item">
                    <a href="/logout" class="btn btn-danger m-1">Logout</a>
                </li>
            </ul>
        </div>

    </nav>

    <div class="d-flex justify-content-center">

        <div class="text-center h3">

            <h2>Make A Post</h2>
            <% if (user.local.email) { %>
                <form action="/makePost" enctype="multipart/form-data" method="POST">
                    <input type="text" name="caption" placeholder="caption">
                    <input type="file" name="file-to-upload" class="m-3">
                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                </form>
        </div>
        <% } %>

    </div>
    <script src="main.js"></script>

</body>

</html>