<!doctype html>
<html>

<head>
  
    <title>
    <%= user.local.username %>
    </title>
   
      <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
      <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      <link rel="stylesheet" href="/style.css">
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
</head>

<body>
  <div class="container">

    <nav class="navbar fixed-top navbar-default bg-dark mb-5" role="navigation">
      <div class="display-1 text-center">
        <h1 class="text-white"><%= user.local.username %></h1>
        <ul class="nav justify-content-center">
          <li class="nav-item">
            <a href="/newpost" class="btn btn-primary m-1">New Post</a>
          </li>
          <li class="nav-item">
            <a href="/feed" class="btn btn-secondary m-1">Feed</a>
          </li>
          <li class="nav-item">
            <a href="/profile" class="btn btn-secondary m-1">Profile</a>
          </li>
          <li class="nav-item">
            <a href="/logout" class="btn btn-danger m-1">Logout</a>
          </li>
        </ul>
      </div>

    </nav>

    <div class="d-flex justify-content-center mt-5">
      <div class="text-center mt-5">
        <h3>Posts</h3>
        <ul class="messages">
          <% for(let i=posts.length - 1; i>= 0; i--) {%>
            <% let color %>
              <% if(posts[i].liked===true){%>
                <% color='red' %>
                  <%}%>
            <li class="message card index-card mb-5 pb-3 p-5">
              <a href="/page/<%= posts[i].postedBy %>">
                <h4>
                  <%= posts[i].postedBy %>
                </h4>
              </a>
              <a href="/post/<%= posts[i].postedBy %>/<%= posts[i]._id %>">
                <img src="../<%= posts[i].img %>" alt="">
              </a>
              <h4>
                <%= posts[i].caption %>
              </h4>
              <span class="likes">
                <%= posts[i].likes %>
              </span>
              <span><i class="fas fa-heart postHeart m-2" style="color: <%= color%>"></i></span>
              
              <span class="likes">
                <%=comments.filter(item=> item.postId == posts[i]._id).length%>
              </span>
              <span><a href="/post/<%= posts[i].postedBy %>/<%= posts[i]._id %>"><i class="far fa-comment m-2"></a></i></span>
            </li>
            <% } %>
        </ul>
      </div>
    </div>

    <script src="main.js"></script>

</body>

</html>